{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      { "name": "next" }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": ".",
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
