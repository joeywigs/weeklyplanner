{
  "name": "mealflow",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "build": "npm run build --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "type-check": "tsc --noEmit --project apps/web/tsconfig.json"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
